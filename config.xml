<?xml version='1.0' encoding='utf-8'?>
<widget id="app.netlify.brain_beats.twa" version="1.0.51" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>brain beats</name>
    <description>Brain Beats is a brainwave entertainment portal containing programs of solfeggio frequency, binaural beats and monaural beats.p</description>
    <author email="mr.kumar.abhishek@email.com" href="https://cordova.apache.org">
        Abhishek Kumar
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

      <platform name="android">
        <icon src="res/icon/android/ldpi.png" density="ldpi" />
        <icon src="res/icon/android/mdpi.png" density="mdpi" />
        <icon src="res/icon/android/hdpi.png" density="hdpi" />
        <icon src="res/icon/android/xhdpi.png" density="xhdpi" />
        <icon src="res/icon/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon/android/xxxhdpi.png" density="xxxhdpi" />
<!--
        <splash src="res/screen/android/splash-port-hdpi.png" density="port-hdpi" />
        <splash src="res/screen/android/splash-port-ldpi.png" density="port-ldpi" />
        <splash src="res/screen/android/splash-port-mdpi.png" density="port-mdpi" />
        <splash src="res/screen/android/splash-port-xhdpi.png" density="port-xhdpi" />
        <splash src="res/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi" />
        <splash src="res/screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi" /> 
-->
    </platform>
    <platform name="electron">
        <icon src="res/icon/electron/brain-beats-netlify.png" target="app" />
        <icon src="res/icon/electron/brain-beats-netlify.png" target="installer" />
    </platform>
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/icon/android/xxxhdpi.png" />
    <preference name="android-targetSdkVersion" value="35" />
    <preference name="SplashScreen" value="img/logo.png" />
    <preference name="SplashScreenDelay" value="5000" />
     <preference name="GradlePluginKotlinEnabled" value="true" />
    <preference name="AndroidXEnabled" value="true" />
    <!-- 
    <preference name="AutoHideSplashScreen" value="false" />
    -->
    <preference name="LoadUrlTimeoutValue" value="15000"/>
    <preference name="BackgroundMode" value="enable" />
</widget>

